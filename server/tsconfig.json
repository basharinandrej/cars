{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noErrorTruncation": true,
    "paths": {
      "@models*": ["models/*"],
      "@routers*": ["routers/*"],
      "@common*": ["common/*"],
      "@db*": ["db/*"],
      "@controllers*": ["controllers/*"],
      "@services*": ["services/*"],
      "@api-error*": ["api-error/*"],
      "@dtos*": ["dtos/*"],
    }, 
  }
}

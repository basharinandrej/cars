{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
          "@app": ["./src/app/index"],
          "@pages": ["./src/pages/index"],
          "@widgets": ["./src/widgets/index"],
          "@shared": ["./src/shared/index"],
          "@features": ["./src/features/index"],
          "@entities": ["./src/entities/index"],
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}